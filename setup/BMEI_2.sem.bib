issn = {0112-1642},
journal = {Sports Medicine},
number = {8},
pages = {477--487},
pmid = {12076175},
title = {{Exercise-Induced Hypoalgesia and Intensity of Exercise}},
url = {http://link.springer.com/10.2165/00007256-200232080-00001},
volume = {32},
year = {2002}
