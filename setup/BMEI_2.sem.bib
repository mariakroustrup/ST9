journal = {Journal of Neuroscience},
number = {14},
pages = {5540--5548},
pmid = {21471390},
title = {{Brain Mechanisms Supporting the Modulation of Pain by Mindfulness Meditation}},
url = {http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.5791-10.2011},
